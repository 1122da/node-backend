# Copy to config.env and fill in your values. Never commit config.env.

NODE_ENV=development

DATABASE=mongodb+srv://user:password@cluster.mongodb.net/?appName=...
DATABASE_PASSWORD=your_password

EMAIL_USERNAME=
EMAIL_HOST=sandbox.smtp.mailtrap.io
EMAIL_PORT=587
EMAIL_PASSWORD=

JWT_SECRET=your-ultra-secure-and-ultra-long
EXPIRE_IN=90d

INVITATION_JWT_SECRET=your-ultra-secure-and-ultra-long
INVITATION_EXPIRE_IN=10m

CLOUDINARY_NAME=
CLOUDNAIRY_API_KEY=
CLOUDNAIRY_SECRET_KEY=

# Firebase: base64-encoded service account JSON (never commit the real key).
# Generate with: node -e "console.log(require('fs').readFileSync('./firebase/serviceAccountKey.json').toString('base64'))"
FIREBASE_SERVICE_ACCOUNT_BASE64=
